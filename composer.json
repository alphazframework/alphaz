{	
    "name": "zest/zest",
    "description": "A Zest framework",
    "keywords": ["zest","php", "framework"],
    "license": "MIT",
    "type":"project",
    "authors": [
        {
            "name": "Malik Umer Farooq",
            "email":"lablnet01@gmail.com",
            "homepage": "https://softhub99.com"
        }
    ],	
    "require":{
    	"zest/framework": "^3.0.0"
    },	
    "require-dev": {
        "phpunit/phpunit": "^7.1"
    },	
    "autoload": {
        "psr-4": {
             "App\\": "App/",
             "Config\\": "Config/"
       }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "Tests/"
        }
    },
    "config":{
        "optimize-autoloader":true,
        "preferred-install": "dist"
    }	
}
